{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@/*": ["./*"],
    "@/lib/*": ["./lib/*"],
    "@/components/*": ["./components/*"],
    "@/stores/*": ["./stores/*"],
    "@/styles/*": ["./styles/*"],
    "@/types/*": ["./types/*"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}